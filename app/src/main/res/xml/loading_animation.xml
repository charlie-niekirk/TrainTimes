<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@id/start"
        motion:constraintSetEnd="@id/middle"
        motion:duration="400"
        motion:motionInterpolator="@android:anim/decelerate_interpolator"
        />

    <Transition
        motion:constraintSetStart="@id/middle"
        motion:constraintSetEnd="@id/end"
        motion:duration="400"
        motion:motionInterpolator="@android:anim/decelerate_interpolator"/>

    <ConstraintSet
        android:id="@+id/start">
        <Constraint
            android:id="@id/loading_bar"
            android:layout_height="6dp"
            motion:layout_constraintBottom_toTopOf="@id/search_select_dep_station"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/home_title"
            motion:layout_constraintEnd_toStartOf="parent"/>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/middle">
        <Constraint
            android:id="@id/loading_bar"
            android:layout_height="7dp"
            motion:layout_constraintBottom_toTopOf="@id/search_select_dep_station"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/home_title"/>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/end">
        <Constraint
            android:id="@id/loading_bar"
            android:layout_height="7dp"
            motion:layout_constraintBottom_toTopOf="@id/search_select_dep_station"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/home_title"/>
    </ConstraintSet>

</MotionScene>