<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.cniekirk.traintimes.ui.main.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_nearbyFragment"
            app:destination="@id/nearbyFragment"/>
    </fragment>
    <fragment
        android:id="@+id/nearbyFragment"
        android:name="com.cniekirk.traintimes.ui.nearby.NearbyFragment"
        android:label="NearbyFragment">
        <action
            android:id="@+id/action_nearbyFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/depStationSearchFragment"
        android:name="com.cniekirk.traintimes.ui.main.DepStationSearchFragment"
        android:label="DepStationSearchFragment">
        <action
            android:id="@+id/action_homeFragment_to_depStationSearchFragment"
            app:destination="@id/depStationSearchFragment" />
    </fragment>
</navigation>