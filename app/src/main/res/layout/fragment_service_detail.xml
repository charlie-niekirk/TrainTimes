<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBackground"
    android:id="@+id/background_view">

    <ImageView
        android:id="@+id/operator_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/service_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/operator_icon"
        app:layout_constraintStart_toStartOf="@id/operator_icon"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/circularstd"
        android:textSize="22sp"
        android:textColor="@color/colorAccent"
        android:alpha="1"
        tools:text="London Bridge"/>



</androidx.constraintlayout.motion.widget.MotionLayout>